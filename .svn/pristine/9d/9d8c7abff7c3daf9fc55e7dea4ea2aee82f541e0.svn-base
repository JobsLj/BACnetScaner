<Window x:Class="BACnetScanBIM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BACnetScanBIM"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="设备">
            <ListView x:Name="lsvDevice" ItemsSource="{Binding DevicesList}" 
                  SelectedItem="{Binding SelectedDevice,Mode=TwoWay}" 
                  Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Address}"/>
                        <GridViewColumn DisplayMemberBinding="{Binding DeviceId}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GroupBox Header="点位" Grid.Column="1">
            <ListView ItemsSource="{Binding SelectedDevice.Items}" Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="点名" DisplayMemberBinding="{Binding PROP_OBJECT_NAME}"/>
                        <GridViewColumn Header="寄存器类型" DisplayMemberBinding="{Binding ObjectId.Type}"/>
                        <GridViewColumn Header="寄存器地址" DisplayMemberBinding="{Binding ObjectId.Instance}"/>
                        <GridViewColumn Header="描述" DisplayMemberBinding="{Binding PROP_DESCRIPTION}"/>
                        <GridViewColumn Header="值" DisplayMemberBinding="{Binding PROP_PRESENT_VALUE}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GroupBox Header="操作" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Height="50" x:Name="btnReadSubNodesBatch" Content="开始扫点" Click="btnReadSubNodesBatch_Click" Margin="5"/>
                <Button Height="50" x:Name="btnSaveExcel" Content="保存Excel" Click="btnSaveExcel_Click" Margin="5"/>
            </WrapPanel>
        </GroupBox>
    </Grid>
</Window>
