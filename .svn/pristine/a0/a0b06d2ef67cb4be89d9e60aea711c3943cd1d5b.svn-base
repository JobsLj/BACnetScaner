namespace BACnetScanBIM
{
    /// <summary>
    /// MainWindow.xaml 的交互逻辑
    /// </summary>
    public partial class MainWindow : Window
    {
        public MainWindow()
        {
            InitializeComponent();
            this.Loaded += MainWindow_Loaded;
        }

        private void MainWindow_Loaded(object sender, RoutedEventArgs e)
        {
            Console.WriteLine("Start");
            this.DataContext = MainVM.Instance;
            MainVM.Instance.Run();
        }

        private void btnReadSubNodes_Click(object sender, RoutedEventArgs e)
        {
            if (MainVM.Instance.SelectedDevice == null) return;
            var count = MainVM.Instance.GetDeviceArrayIndexCount(MainVM.Instance.SelectedDevice);
            MainVM.Instance.ScanPoint(MainVM.Instance.SelectedDevice, count);
        }

        private void btnReadSubNodesBatch_Click(object sender, RoutedEventArgs e)
        {
            if (MainVM.Instance.SelectedDevice == null) return;
            var count = MainVM.Instance.GetDeviceArrayIndexCount(MainVM.Instance.SelectedDevice);
            MainVM.Instance.ScanPointsBatch(MainVM.Instance.SelectedDevice, count);
        }

        private void btnClear_Click(object sender, RoutedEventArgs e)
        {
            MainVM.Instance.Status = "";
        }

        private void btnReadSubProperties_Click(object sender, RoutedEventArgs e)
        {
            if (MainVM.Instance.SelectedDevice == null) return;
            if (MainVM.Instance.SelectedSubNode == null) return;
            MainVM.Instance.ScanSubProperties(MainVM.Instance.SelectedDevice, MainVM.Instance.SelectedSubNode);
        }
    }
}
