<Window x:Class="BACnetScanBIM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BACnetScanBIM"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="设备">
            <ListView x:Name="lsvDevice" ItemsSource="{Binding DevicesList}" 
                  SelectedItem="{Binding SelectedDevice,Mode=TwoWay}" 
                  Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Address}"/>
                        <GridViewColumn DisplayMemberBinding="{Binding DeviceId}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GroupBox Header="点位" Grid.Column="1">
            <ListView ItemsSource="{Binding SelectedDevice.Items}" 
                  SelectedItem="{Binding SelectedSubNode,Mode=TwoWay}" 
                  Margin="5">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding ObjectId.Type}"/>
                        <GridViewColumn DisplayMemberBinding="{Binding ObjectId.Instance}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>
        <GroupBox Header="属性" Grid.Column="2">

        </GroupBox>
        <GroupBox Header="操作" Grid.Row="2" Grid.Column="2">
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Height="50" x:Name="btnReadSubNodes" Content="读取子节点" Click="btnReadSubNodes_Click" Margin="5"/>
                <Button Height="50" x:Name="btnReadSubNodesBatch" Content="批量子节点" Click="btnReadSubNodesBatch_Click" Margin="5"/>
                <Button Height="50" x:Name="btnReadSubProperties" Content="读取子属性" Click="btnReadSubProperties_Click" Margin="5"/>
                <Button Height="50" x:Name="btnClear" Content="清空日志" Click="btnClear_Click" Margin="5"/>
            </WrapPanel>
        </GroupBox>
        <GroupBox Header="日志" Grid.Row="2" Grid.ColumnSpan="2">
            <ScrollViewer Height="200" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <TextBox IsReadOnly="True" Text="{Binding Status,Mode=OneWay}" BorderThickness="0"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
